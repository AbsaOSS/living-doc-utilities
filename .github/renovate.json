{
  "extends": [
    "config:recommended",
    "helpers:pinGitHubActionDigests",
    "helpers:pinGitHubActionDigestsToSemver"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "pip_requirements"
      ],
      "groupName": "Python Dependencies",
      "groupSlug": "python-deps",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "matchManagers": [
        "pip_requirements"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "groupName": null,
      "automerge": true
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "GitHub Actions",
      "groupSlug": "github-actions",
      "automerge": false
    }
  ],
  "labels": [
    "auto-update"
  ],
  "schedule": [
    "0 0 * * 0"
  ],
  "baseBranches": [
    "master"
  ],
  "prConcurrentLimit": 3,
  "commitMessage": "Release Notes:\n- {{depName}} to {{newVersion}}",
  "prTitle": "Update {{depName}} to {{newVersion}}"
}
